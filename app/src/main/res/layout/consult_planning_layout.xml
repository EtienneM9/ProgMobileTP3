<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/consult_planning_layout"
    android:layout_marginTop="20dp"
    style="@style/CardContainer">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/consult_title"
        style="@style/TextViewTitle"
        />

    <TextView
        android:id="@+id/slot1_text"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_hour"
        style="@style/PlanningSlot"
        />
    
    <TextView
        android:id="@+id/slot2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/second_hour"
        style="@style/PlanningSlot"
        />
    
    <TextView
        android:id="@+id/slot3_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/third_hour"
        style="@style/PlanningSlot"
        />
    
    <TextView
        android:id="@+id/slot4_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fourth_hour"
        style="@style/PlanningSlot"
        />

</LinearLayout>
